<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="452.0" prefWidth="504.0" spacing="20.0" xmlns="http://javafx.com/javafx/" 
xmlns:fx="http://javafx.com/fxml/1" fx:controller="GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="attemptsLabel" text="Label" />
        <GridPane fx:id="gridPane" alignment="CENTER">
        </GridPane>
        <GridPane fx:id="colorPane" alignment="CENTER" GridPane.rowIndex="0">
        </GridPane>
        <GridPane alignment="CENTER">
            <HBox alignment="BASELINE_RIGHT" spacing="10.0" GridPane.rowIndex="1">
                <Button fx:id="deleteButton" mnemonicParsing="false" onMouseClicked="#deleteAction" text="Delete" />
                <Button fx:id="clearButton" mnemonicParsing="false" onMouseClicked="#clearAction" text="Clear" />
                <Button fx:id="nextPuzzleButton" mnemonicParsing="false" onMouseClicked="#nextPuzzleAction" text="Next puzzle" />
                <Button fx:id="validateButton" mnemonicParsing="false" onMouseClicked="#validateAction" text="Validate" />
            </HBox>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</VBox>
